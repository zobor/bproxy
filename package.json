{
  "name": "bproxy",
  "version": "5.2.8",
  "description": "代理工具",
  "main": "./electron.js",
  "bin": {
    "bproxy": "./bin/bproxy"
  },
  "scripts": {
    "prepare": "npx husky install",
    "lint": "eslint src --ext .ts",
    "dev:web": "vite",
    "dev:server": "rimraf ./server-build && swc src/proxy src/utils -d server-build -w",
    "app": "cross-env NODE_ENV=app node node_modules/electron/cli.js ./server-build/electron.js",
    "pm2": "pm2 start ecosystem.config.js && pm2 log",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "cp": "cp src/web/libs/inspect.umd.js server-build/utils",
    "check-types": "tsc -p tsconfig.json --noEmit",
    "build:server": "rimraf ./server-build && swc src/proxy src/utils -d server-build",
    "build:server:tsc": "rimraf ./server-build && tsc -p . && npm run cp",
    "build:web": "vite build",
    "build:weinre": "cross-env NODE_ENV=weinre vite build --mode development && npm run cp",
    "build": "npm run build:web && npm run build:server && npm run build:weinre",
    "pkg:mac": "electron-packager . bproxy --platform=darwin --arch=x64 --icon=./icon.ico --out=./app-build --overwrite",
    "pkg:m1": "electron-packager . bproxy --platform=darwin --arch=arm64 --icon=./icon.ico --out=./app-build --overwrite",
    "pkg:windows": "electron-packager . bproxy --platform=win32 --arch=x64 --icon=./icon.ico --out=./app-build --overwrite"
  },
  "dependencies": {
    "iconv-lite": "^0.6.3",
    "licia": "1.34.0",
    "lodash": "^4.17.21",
    "log4js": "6.5.2",
    "mkdirp": "1.0.4",
    "node-forge": "^1.3.1",
    "pako": "2.0.4",
    "request": "2.88.2",
    "rxjs": "7.5.1",
    "ws": "8.5.0"
  },
  "devDependencies": {
    "@ant-design/icons": "4.7.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.0",
    "@types/jest": "^28.1.6",
    "@types/lodash": "4.14.148",
    "@types/node": "12.19.16",
    "@types/qrcode": "1.4.1",
    "@types/qs": "6.9.7",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "@vitejs/plugin-react": "^2.0.1",
    "animate.css": "4.1.1",
    "antd": "^4.22.4",
    "chobitsu": "0.3.3",
    "classnames": "2.3.1",
    "copy-to-clipboard": "3.3.1",
    "cross-env": "7.0.3",
    "electron": "^22.3.21",
    "electron-packager": "^16.0.0",
    "eslint": "^6.6.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "less": "4.1.2",
    "prettier": "2.4.1",
    "qrcode": "^1.5.1",
    "qs": "6.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^3.1.4",
    "react-router-dom": "^6.3.0",
    "rimraf": "3.0.2",
    "sass": "^1.54.4",
    "ts-jest": "^28.0.7",
    "vite": "^3.0.7",
    "vite-plugin-progress": "^0.0.3",
    "vite-plugin-svgr": "^2.2.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zobor/bproxy"
  },
  "keywords": [
    "代理工具"
  ],
  "author": {
    "name": "zobor",
    "email": "nodejs.js@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zobor/bproxy/issues"
  },
  "engines": {
    "node": ">= 16.0.0",
    "npm": ">= 8.0.0"
  },
  "preferGlobal": true,
  "homepage": "http://www.bproxy.cn",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run check-types"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx,ts}": [
      "eslint --ext --fix .tsx,.ts ./src",
      "prettier --write",
      "git add"
    ]
  }
}
